<div class=" container">
    <h2 class="title">Available drones</h2>
    <hr>
    <div class="row">

        {{#each drones}}

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p>{{propellers}}</p>
                    <p>{{maxSpeed}}</p>
                    <a href="/drones/{{_id}}/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/drones/delete/{{_id}}" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                </div>
            </div>
        </div>


        {{/each}}

    </div>
</div>